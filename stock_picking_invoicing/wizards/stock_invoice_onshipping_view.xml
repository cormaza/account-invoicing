<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_stock_invoice_onshipping" model="ir.ui.view">
        <field name="name">Stock Invoice Onshipping</field>
        <field name="model">stock.invoice.onshipping</field>
        <field name="arch" type="xml">
            <form string="Create invoice">
                <h1>
                    <field name="invoice_type" readonly="1" />
                </h1>
                <group>
                    <field
                        name="journal_id"
                        required="1"
                        options="{'no_create': True}"
                    />
                    <field name="group" />
                    <field name="invoice_date" />
                </group>
                <footer>
                    <button
                        name="action_generate"
                        string="Create"
                        type="object"
                        class="oe_highlight"
                    />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <act_window
        name="Create Draft Invoices"
        res_model="stock.invoice.onshipping"
        binding_model="stock.picking"
        view_mode="form"
        target="new"
        id="action_stock_invoice_onshipping"
    />
</odoo>
